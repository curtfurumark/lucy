<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <RadioGroup
        android:id="@+id/mentalDayFragment_radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/topTen_radioButtonEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/energy" />

        <RadioButton
            android:id="@+id/topTen_radioButtonMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood" />

        <RadioButton
            android:id="@+id/topTen_radioButtonAnxiety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anxiety" />

        <RadioButton
            android:id="@+id/topTen_radioButtonStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stress" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topTenActivity_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mentalDayFragment_radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>