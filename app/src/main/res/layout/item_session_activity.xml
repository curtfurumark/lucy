<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.ItemSession">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemSession_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:context=".activities.ItemEditor">

        <TextView
            android:id="@+id/itemSession_currentEnergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/energy"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemSession_headingLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_currentEnergy">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemSession_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/itemSession_buttonTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_headingLayout" />

        <TextView
            android:id="@+id/itemSession_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:inputType="time"
            android:minHeight="48dp"
            android:text="@string/_00_00_00"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@+id/itemSession_checkBoxDone"
            app:layout_constraintStart_toEndOf="@+id/itemSession_buttonTimer"
            app:layout_constraintTop_toTopOf="@+id/itemSession_buttonTimer" />

        <CheckBox
            android:id="@+id/itemSession_checkBoxDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            app:checkedState="checked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemSession_duration"
            tools:text="done" />

        <TextView
            android:id="@+id/itemSession_estimateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="estimated time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_buttonTimer" />

        <View
            android:id="@+id/dividerComment"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_estimateTime" />

        <TextView
            android:id="@+id/itemSession_labelCommentEtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comment_etc"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerComment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemSession_layoutComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_labelCommentEtc">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout8comment"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemSession_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/comment" />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/dividerDateTime"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutComment" />


        <TextView
            android:id="@+id/itemSession_labelDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/date_and_time"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerDateTime" />

        <LinearLayout
            android:id="@+id/itemSession_layoutDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemSession_labelDateTime">

            <TextView
                android:id="@+id/itemSession_targetDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/target_date"
                android:textSize="24sp"
                android:minHeight="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutTags" />

            <TextView
                android:id="@+id/itemSession_targetTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/target_time"
                android:textSize="24sp"
                android:minHeight="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_targetDate" />
        </LinearLayout>

        <View
            android:id="@+id/divider_mental"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutDateTime" />

        <TextView
            android:id="@+id/itemSession_labelMental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/mental"
            android:textSize="24sp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_mental" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemSession_layoutMental"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemSession_labelMental">

            <TextView
                android:id="@+id/itemSession_labelEnergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:ems="5"
                android:text="@string/energy"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/itemSession_seekBarEnergy"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="5"
                android:visibility="visible"
                android:contentDescription="@string/energy_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemSession_labelEnergy"
                app:layout_constraintTop_toTopOf="@+id/itemSession_labelEnergy" />

            <TextView
                android:id="@+id/itemSession_labelAnxiety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:ems="5"
                android:text="@string/anxiety"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_labelEnergy" />

            <SeekBar
                android:id="@+id/itemSession_anxietySeekbar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="5"
                android:visibility="visible"
                android:contentDescription="@string/anxiety_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemSession_labelAnxiety"
                app:layout_constraintTop_toTopOf="@+id/itemSession_labelAnxiety" />

            <TextView
                android:id="@+id/itemSession_labelMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:ems="5"
                android:text="@string/mood"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_labelAnxiety" />

            <SeekBar
                android:id="@+id/itemSession_seekBarMood"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="5"
                android:visibility="visible"
                android:contentDescription="@string/mood_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemSession_labelMood"
                app:layout_constraintTop_toTopOf="@+id/itemSession_labelMood" />

            <TextView
                android:id="@+id/itemSession_labelStress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                android:ems="5"
                android:text="@string/stress"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_labelMood" />

            <SeekBar
                android:id="@+id/itemSession_stressSeekbar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="5"
                android:visibility="visible"
                android:contentDescription="@string/stress_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemSession_labelStress"
                app:layout_constraintTop_toTopOf="@+id/itemSession_labelStress" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMentalComment"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/mental_comment"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_labelStress">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemSession_mentalComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lines="4"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/dividerEstimate"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemSession_layoutMental" />

        <TextView
            android:id="@+id/itemSession_labelEstimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/estimate"
            android:textSize="24sp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerEstimate" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemSession_layoutEstimate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_labelEstimate">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itemSession_textInputLayout_hours"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:minEms="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemSession_estimateHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hours"
                    android:inputType="number"
                    android:text="00"
                    tools:ignore="HardcodedText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itemSession_textInputLayout_minutes"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                app:layout_constraintStart_toEndOf="@+id/itemSession_textInputLayout_hours"
                app:layout_constraintTop_toTopOf="@+id/itemSession_textInputLayout_hours">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemSession_estimateMinutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/minutes"
                    android:inputType="number"
                    android:text="00"
                    tools:ignore="HardcodedText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itemSession_layoutSeconds"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                app:layout_constraintStart_toEndOf="@+id/itemSession_textInputLayout_minutes"
                app:layout_constraintTop_toTopOf="@+id/itemSession_textInputLayout_minutes">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemSession_estimateSeconds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/seconds"
                    android:inputType="number"
                    android:text="00"
                    tools:ignore="HardcodedText" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/energy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_textInputLayout_hours" />

            <SeekBar
                android:id="@+id/itemSession_estimateEnergySeekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:max="10"
                android:progress="5"
                android:contentDescription="@string/estimated_energy_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/textView10" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/dividerRepeat"
            android:layout_width="407dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutEstimate" />

        <TextView
            android:id="@+id/itemSession_labelRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/repeat"
            android:textSize="24sp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerRepeat"
            app:drawableStartCompat="@drawable/baseline_repeat_24" />

        <ImageView
            android:id="@+id/itemSession_repeatActionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:contentDescription="@string/add_or_delete_repeat"
            app:layout_constraintTop_toBottomOf="@+id/dividerRepeat"
            app:srcCompat="@drawable/baseline_add_24" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemSession_layoutRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_labelRepeat">

            <TextView
                android:id="@+id/itemSession_periodDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="@string/description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemSession_periodTargetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/next_date"
                app:layout_constraintStart_toStartOf="@+id/itemSession_periodDescription"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_periodDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/divider_notification"
            android:layout_width="407dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutRepeat" />

        <TextView
            android:id="@+id/itemSession_labelNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/notification"
            android:textSize="24sp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_notification" />

        <ImageView
            android:id="@+id/itemSession_notificationAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/add_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemSession_labelNotifications"
            app:srcCompat="@drawable/baseline_add_24"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:contentDescription="@string/add_or_delete_notification" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemSession_layoutNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_labelNotifications">

            <TextView
                android:id="@+id/itemSession_notificationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_date"
                android:textSize="20sp"
                android:minHeight="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemSession_notificationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/notification_time"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemSession_notificationDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/dividerInfo"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutNotification" />

        <TextView
            android:id="@+id/itemSession_labelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/info"
            android:textSize="24sp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerInfo" />

        <LinearLayout
            android:id="@+id/itemSession_layoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemSession_labelInfo">



        </LinearLayout>


        <View
            android:id="@+id/dividerSettings"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutInfo" />

        <TextView
            android:id="@+id/itemSession_labelSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="24sp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerSettings" />

        <LinearLayout
            android:id="@+id/itemSession_layoutSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_labelSettings">

            <CheckBox
                android:id="@+id/itemSession_isPrioritized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_prioritized" />

            <CheckBox
                android:id="@+id/itemSession_checkBoxAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_appointment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/itemSession_checkBoxTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_template"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_checkBoxAppointment"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="9dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/color" />

                <EditText
                    android:id="@+id/itemSession_colorCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="@string/color"
                    android:inputType="number" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/dividerSearch"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutSettings" />

        <TextView
            android:id="@+id/itemSession_labelSearchable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textSize="24sp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerSearch" />

        <LinearLayout
            android:id="@+id/itemSession_layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemSession_labelSearchable">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itemSession_layoutTags"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout8comment">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemSession_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tags" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/itemSession_categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSession_layoutTags" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/itemSession_fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/add_child_item"
            android:text="@string/add_child_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/baseline_add_circle_outline_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>