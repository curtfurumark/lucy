<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_tertiary80"
    android:padding="8dp"
    tools:context=".activities.HomeActivity">

    <TextView
        android:id="@+id/homeActivity_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="today"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/homeActivity_statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/homeActivity_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="statistics"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/homeActivity_quote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_today" />

    <TextView
        android:id="@+id/homeActivity_quote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="24sp"
        android:text="fabulous quotes"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_statistics" />

    <TextView
        android:id="@+id/homeActivity_newMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="brand new"
        app:layout_constraintBottom_toTopOf="@+id/homeActivity_today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>