<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.HomeActivity">


    <TextView
        android:id="@+id/homeActivity_mainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="main"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/homeActivity_economy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeActivity_economy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="economy"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/homeActivity_calender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_mainActivity" />

    <TextView
        android:id="@+id/homeActivity_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calender"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/homeActivity_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_economy" />

    <TextView
        android:id="@+id/homeActivity_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/homeActivity_graph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_calender" />

    <TextView
        android:id="@+id/homeActivity_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mental graph"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/homeActivity_statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeActivity_settings" />

    <TextView
        android:id="@+id/homeActivity_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/homeActivity_quote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_graph" />

    <TextView
        android:id="@+id/homeActivity_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="quotes"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/homeActivity_navigationDrawer"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_statistics" />

    <TextView
        android:id="@+id/homeActivity_navigationDrawer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="navigation drawer"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeActivity_quote" />

</androidx.constraintlayout.widget.ConstraintLayout>